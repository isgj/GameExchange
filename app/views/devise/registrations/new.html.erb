<div class="container">
  <div class="row center-align"><h3>Sign up</h3></div>
  <div class="row">
    <div class="col s12 l6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="row">
          <div class="input-field">
            <%= f.email_field :email, class: 'validate' %>
            <%= f.label :email, "data-error": "Please insert a valid e-mail" %>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <%= f.password_field :password, autocomplete: "off" %>
            <%= f.label :password do %>
              Password
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="input-field">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= f.label :password_confirmation %>
          </div>
        </div>

        <div class="row">
          <div class="actions">
            <%= f.submit "Sign up", class: 'waves-effect waves-light btn-large' %>
          </div>
        </div>
      <% end %>
    </div>

    <%= render 'layouts/oauth' %>

  </div>
</div>
