<%= render 'gamers_search' %>

<div class="row center-align">
  <em>
    <h4>
      <% if @gamers.blank? %>
      No gamers
    </h4>
  </em>
</div>
      <% else %>
      Gamers
    </h4>
  </em>
</div>

<% for gamer in @gamers %>
  <div class="col s12 l4">
    <div class="card blue-grey darken-1">
      <div class="card-profile white-text">
        <div class="valign-wrapper">
          <% if gamer.photo.blank? %>
            <%= image_tag "no_photo", class: "circle responsive-img activator card-profile-image" %>
          <% else %>
            <img src="<%= gamer.photo %>" alt="Profile photo" class="circle responsive-img activator card-profile-image">
          <% end %>
          <a class="btn-floating activator waves-effect waves-light darken-2 right">
            <i class="material-icons">expand_less</i>
          </a>
        </div>
        <span class="card-title activator white-text darken-3">
          <%= gamer.name.blank? ? "Anomymous" : gamer.name.split.map(&:capitalize).join(" ") %>
        </span>
        <p><%= gamer.email %></p>
        <p><%= gamer.city.blank? ? "World" : gamer.city %></p>
      </div>

      <div class="card-reveal">
        <span class="card-title grey-text">
          <%= gamer.name.blank? ? "Anomymous" : gamer.name.split.map(&:capitalize).join(" ") %>
          <a class="btn-floating activator waves-effect waves-light darken-2 right">
            <i class="material-icons">expand_more</i>
          </a>
        </span>
        <div class="valign-wrapper"><i class="material-icons">email</i> <%= gamer.email %> </div>
        <div class="valign-wrapper">
          <i class="material-icons">phone</i>
          <%= gamer.phone.blank? ? "No phone provided" : gamer.phone %>
        </div>
        <div class="valign-wrapper">
          <i class="material-icons">star_half</i>
          <%= gamer.avg_vote %>
        </div>
      </div>

      <div class="card-action">
        <%= link_to "Visit profile", gamer_path(gamer) %>
      </div>
    </div>
  </div>
<% end %>

<% end %>
