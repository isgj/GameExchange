<div class="row center-align">
  <em>
    <h4>
      <% if @requests.blank? %>
    </h4>
  </em>
</div>
      <% else %>
      Pending requests
    </h4>
  </em>
</div>

<% for applier in @requests %>

<div class="col s12 l4">
  <div class="card blue-grey darken-1">
    <div class="card-profile white-text">
      <div class="valing-wrapper">
        <% if applier.photo.blank? %>
          <%= image_tag "no_photo.jpg", class: "circle responsive-img activator card-profile-image" %>
        <% else %>
          <img src="<%= applier.photo %>" alt="Profile photo" class="circle responsive-img activator card-profile-image">
        <% end %>
        <a class="btn-floating activator waves-effect waves-light darken-2 right">
          <i class="material-icons">expand_less</i>
        </a>
      </div>
      <span class="card-title activator white-text darken-3">
        <%= applier.name.blank? ? "Anomymous" : applier.name.split.map(&:capitalize).join(" ") %>
      </span>
      <p><%= applier.email %></p>
      <p><%= applier.city.blank? ? "World" : applier.city %></p>
    </div>

    <div class="card-reveal">
      <span class="card-title grey-text">
        <%= applier.name.blank? ? "Anomymous" : applier.name.split.map(&:capitalize).join(" ") %>
        <a class="btn-floating activator waves-effect waves-light darken-2 right">
          <i class="material-icons">expand_more</i>
        </a>
      </span>
      <div class="valign-wrapper"><i class="material-icons">email</i> <%= applier.email %> </div>
      <div class="valign-wrapper">
        <i class="material-icons">phone</i>
        <%= applier.phone.blank? ? "_________" : applier.phone %>
      </div>
      <div class="valign-wrapper">
        <i class="material-icons">star_half</i>
        <%= applier.avg_vote %>
      </div>
    </div>
    <div class="card-action">
      <%= link_to "Visit profile", gamer_path(applier) %>
      <%= render :partial => 'accept_request', :locals => {:applier => applier.id} %>
      <%= render :partial => 'refuse_request', :locals => {:applier => applier.id} %>
    </div>
  </div>
</div>
<% end %>

<% end %>
