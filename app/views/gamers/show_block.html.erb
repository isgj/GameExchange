<div class="row center-align">
  <em>
    <h4>
      <% if @blocked.blank? %>
      No blocked users to show
    </h4>
  </em>
</div>
      <% else %>
      Blocked users
    </h4>
  </em>
</div>

<% for blocked in @blocked %>

<div class="col s12 l4">
  <div class="card blue-grey darken-1">
    <div class="card-profile white-text">
      <div class="valing-wrapper">
        <% if blocked.photo.blank? %>
          <%= image_tag "no_photo.jpg", class: "circle responsive-img activator card-profile-image" %>
        <% else %>
          <img src="<%= friend.photo %>" alt="Profile photo" class="circle responsive-img activator card-profile-image">
        <% end %>
        <a class="btn-floating activator waves-effect waves-light darken-2 right">
          <i class="material-icons">expand_less</i>
        </a>
      </div>
      <span class="card-title activator white-text darken-3">
        <%= blocked.name.blank? ? "Anomymous" : blocked.name.split.map(&:capitalize).join(" ") %>
      </span>
      <p><%= blocked.email %></p>
      <p><%= blocked.city.blank? ? "World" : blocked.city %></p>
    </div>

    <div class="card-reveal">
      <span class="card-title grey-text">
        <%= blocked.name.blank? ? "Anomymous" : blocked.name.split.map(&:capitalize).join(" ") %>
        <a class="btn-floating activator waves-effect waves-light darken-2 right">
          <i class="material-icons">expand_more</i>
        </a>
      </span>
      <div class="valign-wrapper"><i class="material-icons">email</i> <%= blocked.email %> </div>
      <div class="valign-wrapper">
        <i class="material-icons">phone</i>
        <%= blocked.phone.blank? ? "_________" : blocked.phone %>
      </div>
      <div class="valign-wrapper">
        <i class="material-icons">star_half</i>
        <%= blocked.avg_vote %>
      </div>
    </div>
    <div class="card-action">
      <%= link_to "Visit profile", gamer_path(blocked) %>
    </div>
  </div>
</div>
<% end %>

<% end %>
