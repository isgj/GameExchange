<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>Mark</th>
      <th>Commentator</th>
      <th>Commentator name</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.mark %></td>
        <td><%= comment.commentator_id %></td>
        <td><%= comment.users.name %></td>
        <td><%= comment.review %></td>
      </tr>
    <% end %>
  </tbody>
</table>
