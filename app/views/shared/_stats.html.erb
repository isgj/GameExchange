<% @gamer ||= current_user %>
<div class="stats">
  <a href="<%= friends_gamer_path(@gamer) %>">
    <strong id="friends" class="stat">
      <%= @gamer.friends.count %>
    </strong>
    friends and
    <strong id="requests" class="stat">
      <%= @gamer.requests.count %>
    </strong>
    pending requests
  </a>
</div>
